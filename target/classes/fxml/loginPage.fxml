<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="LoginPage"
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/style.css" style="-fx-background-color: #644a4a">
    <right>
        <Button fx:id="mute" text="mute" styleClass="mute" onMouseClicked="#mute"/>
    </right>
    <center>
        <VBox spacing="13" alignment="CENTER" maxWidth="700" fx:id="list" style="-fx-background-color: #be9e6a">
            <Label styleClass="Title" text="welcome to the cup head game" />
            <Label styleClass="Label" text="please login first"/>
            <Label styleClass="description" text="enter your username: "/>
            <TextField fx:id="username" styleClass="TextField" promptText="username" maxWidth="500"/>
            <Label styleClass="description" text="enter your password: "/>
            <TextField fx:id="password" styleClass="TextField" promptText="password" maxWidth="500"/>
            <Button styleClass="Button" text="ok" onMouseClicked="#addTask"/>
            <Label styleClass="link" onMouseClicked="#registerMenu" text="don't have account? sign-up for free"/>
            <Label styleClass="link" onMouseClicked="#mainMenu" text="sign-in as guest"/>
            <Label text="sharif university of technology"/>
            <Label text="made by Amir Mohammad Derakhshandeh - 400101153"/>
        </VBox>
    </center>
</BorderPane>
